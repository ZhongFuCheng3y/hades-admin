{
  "type": "page",
  "title": "新建规则配置",
  "body": [
    {
      "title": "",
      "actions": [
        {
          "label": "保存",
          "type": "submit",
          "level": "success"
        }
      ],
      "body": [
        {
          "type": "fieldSet",
          "title": "脚本配置",
          "body": [
            {
              "type": "input-text",
              "label": "脚本名",
              "name": "name",
              "size": "md",
              "description": "<font color=\"#008252\">全限定类名 eg：com.java3y.hades.domain.HadesParam</font>",
              "required": true
            },
            {
              "type": "radios",
              "label": "消息类型",
              "name": "ruleType",
              "required": true,
              "options": [
                {
                  "label": "Java原生代码",
                  "value": "10"
                },
                {
                  "label": "规则逻辑图",
                  "value": "20"
                }
              ]
            },
            {
              "type": "editor",
              "name": "ruleLogicCode",
              "label": "Java编辑器",
              "language": "java",
              "visibleOn": "this.ruleType==10",
              "required": true,
              "description": "<font color=\"#990000\">禁止使用lambda和lombok！</font>"
            },
            {
              "type": "condition-builder",
              "label": "条件组件",
              "builderMode": "simple",
              "showANDOR": true,
              "name": "ruleLogicGraph",
              "description": "<font color=\"#990000\">根据条件，后台自动生成代码逻辑</font>",
              "required": true,
              "fields": [
                {
                  "label": "文本",
                  "type": "text",
                  "name": "text"
                }
              ],
              "visibleOn": "this.ruleType==20",
              "required": true
            }
          ],
          "bodyClassName": "r-3x w-full text-lg r font-bold",
          "className": ""
        }
      ],
      "type": "form",
      "mode": "horizontal",
      "affixFooter": true,
      "panelClassName": "Panel--default",
      "bodyClassName": "text-lg",
      "redirect": "/crud/list",
      "api": {
        "url": "${ls:backend_url}/config/add",
        "method": "post",
        "data": {
          "name": "${name}",
          "ruleType": "${ruleType}",
          "msgType": "${msgType}",
          "ruleLogicCode": "${ruleLogicCode}",
          "ruleLogicGraph": "${ruleLogicGraph}"
        }
      }
    }
  ],
  "toolbar": [
    {
      "type": "button",
      "actionType": "link",
      "link": "/crud/list",
      "label": "返回列表"
    }
  ],
  "messages": {},
  "style": {},
  "bodyClassName": "p-lg p-t-lg p-r-lg p-b-lg p-l-lg m-none m-l-lg m-b-lg m-r-lg m-t-lg m-lg b-5x b-dark r-3x text-dark bg-white w-full font-bold text-lg"
}